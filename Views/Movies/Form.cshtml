@model Vidly.ViewModels.FormMovieViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h1>@ViewBag.Header</h1>
        @using (Html.BeginForm("Save", "Movies"))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Movie.Name)
                @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Movie.GenreId)
                @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres.ToList(), "Id", "Name"), "Select Genre", new { @class = "Form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Movie.ReleaseDate)
                @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "Date" })
            </div>

            <button type="submit" class="btn btn-default">Save</button>
            @Html.HiddenFor(m => m.Movie.Id)
        }
    </div>