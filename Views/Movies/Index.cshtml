@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    @{var movies = Model.ToList(); }
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Genre</th>
                <th>release date</th>
                <th>date added</th>
                <th>number in stock</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in movies)
            {
                <tr>
                    <th scope="row">@movie.id</th>
                    <td>@movie.name</td>
                    <td>@movie.genre</td>
                    <td>@movie.releaseDate.ToString("dd/MM/yyyy")</td>
                    <td>@movie.dateAdded.ToString("dd/MM/yyyy")</td>
                    <td>@movie.numberInStock</td>
                    
                </tr>
            }
        </tbody>
    </table>


