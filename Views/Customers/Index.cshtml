@model IEnumerable<Vidly.DTO.CustomerDTO>
@{
    ViewBag.Title = "Customers";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@if (Model.Any())
{

    <table id="customers" class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>MembershipType</th>
                <th>Show customer</th>
                <th>Delete customer</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var customerDto in Model)
            {
                <tr>
                    <th scope="row">@customerDto.Id</th>
                    <td>@Html.ActionLink(customerDto.name, "EditCustomer", "Customers", new { id = customerDto.Id }, null)</td>
                    <td>@customerDto.MembershiptypeName</td>
                    <td>@Html.ActionLink("get","GetCustomer", "Customers", new { id = customerDto.Id }, null)</td>
                    <td><button data-customer-id="@customerDto.Id" class="btn-link js-delete">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
    @section scripts{
        <script>
            $(document)
                .ready(
                    function () {
                        $("#customers").DataTable();
                        $("#customers")
                            .on("click",".js-delete" ,function () {
                                var button = $(this);
                                bootbox.confirm("Are you sure you want to delete this customer?",
                                    function (result) {
                                        $.ajax({
                                        url: "/api/Customers/" + button.attr("data-customer-id"),
                                        method: "DELETE",
                                        success: function () {
                                            button.parents("tr").remove();
                                        }
                                    });
                                    });
                                
                            });
                    }
                );

        </script>
    }


}
else
{
    <h1>We don't have customers yet.</h1>
}






